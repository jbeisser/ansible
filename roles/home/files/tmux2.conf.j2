# Generated by Ansible: {{ ansible_date_time.date }} {{ ansible_date_time.time }} {{ ansible_date_time.tz }}
set -g status-utf8 on
setw -g utf8 on
set -s escape-time 1

# In case VISUAL or EDITOR are not set
set -g mode-keys vi

set -g window-status-style fg=green,bg=black
set -g status-left '#[fg=green]#h: '
set -g status-right '#(TZ={{ user_tz }} date +%%H:%%M%%Z)|#(date -u +%%H:%%M%%Z)'
set -g default-terminal "screen-256color"

setw -g window-status-current-style fg=white,bold,bg=red
setw -g aggressive-resize off

setw -g monitor-activity on
set -g visual-activity on

# set mouse interaction on
set -g mouse on

# SSH AUTH SOCK shouldn't be set
set -g update-environment -r
setenv -u SSH_AUTH_SOCK
setenv -g SSH_AUTH_SOCK $HOME/.ssh/ssh_auth_sock

# controls
bind r source-file ~/.tmux.conf \; display "Reloaded!"
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5
